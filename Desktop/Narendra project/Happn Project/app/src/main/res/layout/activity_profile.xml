<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/ActivityProfileMyAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_20"
        android:text="@string/My_Account"
        android:textColor="@color/faint"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ActivityProfileImageDhanu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:layout_marginTop="@dimen/dp_20"
        android:scaleType="fitXY"
        android:src="@drawable/dhanu"
        app:layout_constraintTop_toBottomOf="@id/ActivityProfileMyAccount" />

    <TextView
        android:id="@+id/ActivityProfileMyPreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_35"
        android:drawableLeft="@drawable/ic_baseline_people_24"
        android:drawablePadding="@dimen/dp_20"
        android:text="@string/My_Preferences"
        android:textColor="@color/faint"
        android:textSize="@dimen/sp_20"
        app:layout_constraintTop_toBottomOf="@+id/ActivityProfileImageDhanu" />

    <TextView
        android:id="@+id/ActivityProfileChooseWho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/Choose_path"
        android:textColor="@color/faint"
        app:layout_constraintTop_toBottomOf="@id/ActivityProfileMyPreferences" />


    <TextView
        android:id="@+id/ActivityProfileFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_60"
        android:drawableLeft="@drawable/arrow"
        android:drawablePadding="@dimen/dp_20"
        android:text="@string/Favorites"
        android:textColor="@color/faint"
        android:textSize="@dimen/sp_20"
        app:layout_constraintTop_toBottomOf="@+id/ActivityProfileMyPreferences" />

    <TextView
        android:id="@+id/ActivityProfileFlashNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/Flashnotes"
        android:textColor="@color/faint"
        app:layout_constraintTop_toBottomOf="@id/ActivityProfileFavorite" />

    <TextView
        android:id="@+id/ActivityProfileInviteFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:drawableLeft="@drawable/invite"
        android:drawablePadding="@dimen/dp_20"
        android:text="@string/invite_friends"
        android:textColor="@color/faint"
        android:textSize="@dimen/sp_20"
        app:layout_constraintTop_toBottomOf="@+id/ActivityProfileFlashNote" />

    <TextView
        android:id="@+id/ActivityProfileInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/inviteFlashnotes"
        android:textColor="@color/faint"
        app:layout_constraintTop_toBottomOf="@id/ActivityProfileInviteFriends" />

    <TextView
        android:id="@+id/ActivityProfileAppSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:drawableLeft="@drawable/setting"
        android:drawablePadding="@dimen/dp_20"
        android:text="@string/App_setting"
        android:textColor="@color/faint"
        android:textSize="@dimen/sp_20"
        app:layout_constraintTop_toBottomOf="@+id/ActivityProfileInviteFriends" />

    <TextView
        android:id="@+id/ActivityManageNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/manage_setting"
        android:textColor="@color/faint"
        app:layout_constraintTop_toBottomOf="@id/ActivityProfileAppSetting" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_plane"
        android:padding="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activityProfileHome"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableLeft="@drawable/homegray"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activityProfileNotification"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_bellgrey"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/activityProfileHome" />

    <Button
        android:id="@+id/activityProfilemap"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_location"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/activityProfileNotification" />

    <Button
        android:id="@+id/activityProfilemessage"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_cahtgrey"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/activityProfilemap" />

    <Button
        android:id="@+id/activityProfileProfile"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_5"
        android:drawableLeft="@drawable/personblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/activityProfilemessage" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity12">

    <ImageView
        android:id="@+id/mainActivity12Arrow"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/ic_left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/mainActivity12All_set"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:src="@drawable/sett"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainActivity12Arrow"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_120"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mainActivity12All_set"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/All_set"
            android:textColor="@color/faint"
            android:gravity="center_horizontal"
         android:textSize="@dimen/sp_30"
            android:textStyle="bold"/>
    <Button
        android:id="@+id/mainActivity12btncontinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity12All_set"
        android:layout_marginTop="@dimen/dp_150"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/rectangle_bg"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_20"
        android:padding="@dimen/dp_10"/>


</androidx.constraintlayout.widget.ConstraintLayout>